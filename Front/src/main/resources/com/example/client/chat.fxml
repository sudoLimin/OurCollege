<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" style="-fx-background-color: #212121;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.client.controllers.ChatController">

    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

    <Label text="Group Chat" styleClass="screen-title"/>

    <ScrollPane fx:id="scrollPane" prefHeight="400" prefWidth="500" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="messagesBox" spacing="5" style="-fx-padding: 10;"/>
    </ScrollPane>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="inputField" promptText="Type a message..." prefWidth="350" HBox.hgrow="ALWAYS"/>
        <Button text="Send" onAction="#sendMessage" styleClass="button-primary"/>
    </HBox>

    <Button text="Back" onAction="#back"/>

</VBox>
