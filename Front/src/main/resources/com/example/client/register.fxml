<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" style="-fx-background-color: #212121;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.client.controllers.RegisterController">

    <padding>
        <Insets top="50" right="100" bottom="50" left="100"/>
    </padding>

    <Label text="Register" styleClass="main-title"/>

    <Region minHeight="20"/>

    <TextField fx:id="nameField" promptText="Name" prefWidth="250"/>
    <TextField fx:id="emailField" promptText="Email" prefWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="250"/>

    <Region minHeight="10"/>

    <Button text="Register" onAction="#register" styleClass="button-primary" prefWidth="150"/>
    <Button text="Back to Login" onAction="#back" prefWidth="150"/>
</VBox>
